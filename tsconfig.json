{
    "typeAcquisition": {
        "enable": true
    },
    "compileOnSave": false,
    "compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "jsx": "react",
        "outDir": "wwwroot/dist",
        "moduleResolution": "node",
        "importHelpers": true,
		"lib": ["es6", "dom", "webworker"]
    },
    "exclude": [
        "node_modules",
        "wwwroot"
    ]
}